{
  "name": "shorten",
  "description": "A simple URL shortener",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "install-client": "cd client && yarn install",
    "install-server": "cd server && yarn install",
    "installer": "yarn install && yarn install-client && yarn install-server",
    "client": "cd client && yarn start",
    "server": "cd server && yarn start",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "generate": "cd server && yarn generate-keys"
  },
  "devDependencies": {
    "concurrently": "^4.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/whimsicaldreamer/shorten.git"
  },
  "author": "Ayan Dey"
}
